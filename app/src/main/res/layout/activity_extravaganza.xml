<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity_extravaganza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/backredeem"
                android:layout_width="22dp"
                android:layout_height="17dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:onClick="backredeem"
                android:background="@drawable/panahback" />

            <TextView
                android:id="@+id/redeemvaganza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/backredeem"
                android:fontFamily="@font/montserratsemibold"
                android:text="EkstraVaganza"
                android:textColor="@color/semi_black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/sistem"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/backredeem"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="284dp"
                android:fontFamily="@font/montserratsemibold"
                android:text="Sistem"
                android:textColor="@color/semi_black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sistem"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="264dp"
                android:fontFamily="@font/montserratsemibold"
                android:text="@string/periode"
                android:textColor="@color/semi_black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/pengguna"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/redeemvaganza"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="43dp"
                android:fontFamily="@font/montserratregular"
                android:text="@string/penggunaroyal"
                android:textColor="@color/semi_black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/kapan"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pengguna"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="28dp"
                android:fontFamily="@font/montserratregular"
                android:text="@string/akhirbulan"
                android:textColor="@color/semi_black"
                android:textSize="13dp" />

            <View
                android:id="@+id/line"
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_below="@+id/kapan"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:background="#AEAEAE" />

            <TextView
                android:id="@+id/penukaran"
                android:layout_below="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penukaran Bulan April"
                android:textColor="@color/black_scan"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratsemibold"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tukar_bulan"
                android:layout_below="@+id/penukaran"
                android:layout_marginTop="10dp"
                android:layout_width="330dp"
                android:layout_height="72dp"
                android:background="@drawable/rectangle_warn_redeem"
                android:text="@string/anda_belum_melakukan_penukaran_pada_bulan_ini"
                android:fontFamily="@font/montserratmedium"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:textColor="@color/black_scan"
                android:paddingLeft="25dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_warning"
                android:drawablePadding="15dp"
                />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@id/tukar_bulan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/wheel" />

            <ImageView
                android:id="@+id/wheel"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/arrow_wheel"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tukar_bulan"
                />

            <Button
                android:id="@+id/btnredeem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/montserratsemibold"
                android:text="Redeem"
                android:onClick="reedem1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>